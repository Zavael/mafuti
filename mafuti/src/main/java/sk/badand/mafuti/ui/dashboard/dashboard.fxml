<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox styleClass="mainFxmlClass" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.badand.mafuti.ui.dashboard.DashboardPresenter">
    <stylesheets>
        <URL value="@/styles/dashboard.css" />
    </stylesheets>
    <children>
                
        <VBox fx:id="menu">
            <children>
                <Button defaultButton="true" mnemonicParsing="false" onAction="#processTime" styleClass="main-button" text="%btn.continue" />
                <Button mnemonicParsing="false" onAction="#showClub" text="%btn.team" />
                <Button mnemonicParsing="false" onAction="#showTraining" text="%btn.training" />
                <Button mnemonicParsing="false" onAction="#showFacilities" text="%btn.facilities" />
                <Button mnemonicParsing="false" onAction="#showFinances" text="%btn.finances" />
                <Button mnemonicParsing="false" onAction="#showWorld" text="%btn.world" />
                <Button mnemonicParsing="false" onAction="#showPersonal" text="%btn.personal" />
            </children>
        </VBox>
        <AnchorPane fx:id="content" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <VBox spacing="20" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <HBox styleClass="timeline" HBox.hgrow="ALWAYS">
                            <children>
                                <Label prefWidth="500" text="day -1" HBox.hgrow="ALWAYS" />
                                <Label prefWidth="500" text="day 0" HBox.hgrow="ALWAYS" />
                                <Label prefWidth="500" text="day +1" HBox.hgrow="ALWAYS" />
                                <Label prefWidth="500" text="day +2" HBox.hgrow="ALWAYS" />
                                <Label prefWidth="500" text="day +3" HBox.hgrow="ALWAYS" />
                                <Label prefWidth="500" text="day +4" HBox.hgrow="ALWAYS" />
                                <Label prefWidth="500" text="day +5" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <fx:include source="parts/mails.fxml" />
                        <fx:include source="parts/mediaNews.fxml" />
                        <HBox spacing="10">
                            <!--Stats & misc-->
                            <children>
                                <TableView fx:id="leagueTableList" editable="false" focusTraversable="false">
                                    <columns>
                                        <TableColumn prefWidth="137" resizable="false" sortable="false" text="%title.club">                
                                            <cellValueFactory>
                                                <PropertyValueFactory property="name" />
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn fx:id="pointsColumn" resizable="false" sortType="ASCENDING" sortable="false">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="points" />
                                            </cellValueFactory>
                                        </TableColumn>
                                    </columns>
                                    <sortOrder>
                                        <fx:reference source="pointsColumn" />
                                    </sortOrder>
                                </TableView>
                                <ListView focusTraversable="false" HBox.hgrow="ALWAYS" />
                                <PieChart fx:id="chart" labelsVisible="false" legendSide="RIGHT" legendVisible="true">
                                </PieChart>                                
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</HBox>
