<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="sk.badand.mafuti.ui.preparation.PreparationPresenter">
    <stylesheets>
        <URL value="@/styles/matchtactic.css" />
    </stylesheets>
    
    <top>
        <Label text="%lbl.header" styleClass="header1" />
    </top>
    
    <left>
        <VBox>
            <children>
                <Label styleClass="header2" text="strategy" />
                <Label text="philosophy" />
                <ComboBox fx:id="philosophyChoice" />
                <Separator />
                <Label text="passing style" />
                <ComboBox fx:id="passStyleChoice" />
                <Separator />
                <Label text="passing focus" />
                <ComboBox fx:id="passFocusChoice" />
            </children>
        </VBox>
    </left>
    
    <center>
        <VBox alignment="CENTER">
            <children>
                <Label styleClass="header2" text="lineup" />
            </children>  
        </VBox>
    </center>
    
    <right>
        <VBox>
            <children>
                <Label styleClass="header2" text="instructions" />
                <Label text="tackling" />
                <ComboBox fx:id="tacklingChoice" />
                <Separator />
                <Label text="marking" />
                <ComboBox fx:id="markingChoice" />
                <Separator />
                <Label text="counter-attacks" />
                <ComboBox fx:id="counterAttChoice" />
            </children>
        </VBox>
    </right>
    
    <bottom>
        <HBox alignment="CENTER_RIGHT" >
            <children>
                <Button onAction="#skipMatch" text="%btn.match.skip" />
                <Button onAction="#showMatch" text="%btn.match.attend" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
