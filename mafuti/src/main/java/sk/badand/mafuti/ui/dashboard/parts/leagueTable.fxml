<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.badand.mafuti.ui.dashboard.parts.LeagueTablePresenter">
    <children>
        <TableView fx:id="leagueTableList" editable="false">
            <columns>
                <TableColumn text="%title.club" sortable="false" resizable="false" prefWidth="137">                
                    <cellValueFactory>
                        <PropertyValueFactory property="name" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="pointsColumn" sortType="ASCENDING" sortable="false" resizable="false">
                    <cellValueFactory>
                        <PropertyValueFactory property="points" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <sortOrder>
                <fx:reference source="pointsColumn" />
            </sortOrder>
        </TableView>
    </children>
</AnchorPane>
