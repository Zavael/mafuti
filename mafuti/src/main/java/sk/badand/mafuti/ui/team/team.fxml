<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.badand.mafuti.ui.team.TeamPresenter">
    <stylesheets>
        <URL value="@/styles/team.css" />
    </stylesheets>
    <children>
        <AnchorPane fx:id="menu">
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
            <children>
                <fx:include source="teamMenu.fxml"/>
            </children>
        </AnchorPane>
        <AnchorPane fx:id="content" HBox.hgrow="ALWAYS" >
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            
                    <children>
                        <Label styleClass="header1" text="%lbl.team" />
                        <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" >
                            <tabs>
                                <Tab text="%tab.players">
                                    <content>
                                        <AnchorPane>
                                            <children>
                                                <BorderPane prefHeight="200.0" prefWidth="200.0">
                                                    <center>
                                                        <ListView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                                                    </center>
                                                </BorderPane>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </Tab>
                                <Tab text="%tab.formation">
                                    <content>
                                        <AnchorPane>
                                            <children>
                                                <BorderPane prefHeight="200.0" prefWidth="200.0">
                                                    <center>
                                                        <ListView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                                                    </center>
                                                </BorderPane>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </Tab>
                                <Tab text="%tab.tactics">
                                    <content>
                                        <AnchorPane>
                                            <children>
                                                <BorderPane prefHeight="200.0" prefWidth="200.0">
                                                    <center>
                                                        <ListView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                                                    </center>
                                                </BorderPane>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </Tab>
                            </tabs>
                        </TabPane>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</HBox>
